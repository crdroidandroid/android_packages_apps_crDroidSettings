<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Clipboard toast info -->
    <com.crdroid.settings.preferences.SystemSettingListPreference
        android:key="clipboard_toast_info"
        android:icon="@drawable/ic_movie"
        android:title="@string/clipboard_toast_info_title"
        android:entries="@array/clipboard_toast_info_entries"
        android:entryValues="@array/clipboard_toast_info_values"
        android:defaultValue="0" />

    <!-- CPU Info -->
    <com.crdroid.settings.preferences.SystemSettingSwitchPreference
        android:key="show_cpu_overlay"
        android:icon="@drawable/ic_info"
        android:title="@string/show_cpu_info"
        android:summary="@string/show_cpu_info_summary" />

    <!-- Gaming Mode -->
    <Preference
        android:key="gaming_mode"
        android:icon="@drawable/ic_gaming"
        android:title="@string/gaming_mode_title"
        android:summary="@string/gaming_mode_summary"
        android:fragment="com.crdroid.settings.fragments.misc.GamingMode"/>

    <!-- Smart Charging -->
    <Preference
        android:key="smart_charging"
        android:icon="@drawable/ic_battery_charging_80"
        android:title="@string/smart_charging_title"
        android:summary="@string/smart_charging_summary"
        android:fragment="com.crdroid.settings.fragments.misc.SmartCharging"/>

    <!-- Three-fingers-swipe to screenshot -->
    <com.crdroid.settings.preferences.SystemSettingSwitchPreference
        android:key="three_finger_gesture"
        android:icon="@drawable/ic_three_finger_gesture"
        android:title="@string/three_finger_gesture"
        android:summary="@string/three_finger_gesture_summary"
        android:defaultValue="false" />

    <!-- Toast Icon -->
    <com.crdroid.settings.preferences.SystemSettingSwitchPreference
        android:key="toast_icon"
        android:icon="@drawable/ic_toast"
        android:title="@string/toast_icon_title"
        android:summary="@string/toast_icon_summary"
        android:defaultValue="true" />

    <!-- Sensor Block -->
    <Preference
        android:key="sensor_block_settings"
        android:icon="@drawable/ic_remote"
        android:title="@string/sensor_block_title"
        android:summary="@string/sensor_block_summary"
        android:fragment="com.crdroid.settings.fragments.misc.SensorBlock"/>

    <!-- Pocket Judge -->
    <com.crdroid.settings.preferences.SystemSettingSwitchPreference
        android:key="pocket_judge"
        android:icon="@drawable/ic_pocket"
        android:title="@string/pocket_judge_title"
        android:summary="@string/pocket_judge_summary"
        android:defaultValue="false" />

    <!-- Screenshot compression -->
    <com.crdroid.settings.preferences.SystemSettingSeekBarPreference
        android:key="screenshot_compression"
        android:icon="@drawable/ic_screenshot"
        android:title="@string/screenshot_compression_title"
        android:summary="@string/screenshot_compression_summary"
        android:defaultValue="100"
        android:max="100"
        settings:min="10"
        settings:units="%" />
</PreferenceScreen>
