<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/about_crdroid">

        <!-- Changelog -->
        <PreferenceScreen
            android:key="changelog"
            android:title="@string/changelog_crdroid_title"
            android:fragment="com.crdroid.settings.fragments.Changelog" />

        <!-- crDroid Share -->
        <PreferenceScreen
            android:key="share"
            android:title="@string/share_crdroid_title"
            android:summary="@string/share_crdroid_summary" />

        <!-- crDroid Github -->
        <PreferenceScreen
            android:key="crdroid_source"
            android:title="@string/crdroid_source_title"
            android:summary="@string/crdroid_source_summary" />

        <!-- crDroid GooglePlus -->
        <PreferenceScreen
            android:key="crdroid_google_plus"
            android:title="@string/crdroid_google_plus_title"
            android:summary="@string/crdroid_google_plus_summary" />

        <!-- Maintainers -->
        <PreferenceScreen
            android:key="maintainers"
            android:title="@string/maintainers_crdroid_title"
            android:fragment="com.crdroid.settings.fragments.Maintainers" />

</PreferenceScreen>
